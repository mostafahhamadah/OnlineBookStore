

<div class="card shadow border-0 my-4">
    <div class="card card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Company List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <!-- Content for the left column if needed -->
            </div>

            <div class="col-6 text-end">
                <a asp-controller="Company" asp-action="upsert" class="btn btn-primary">Create New Company</a>
            </div>
        </div>
    </div>

    <table id="tblData" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>PhoneNumber</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section scripts {
    <script src="~/js/company.js"></script> <!-- Use "~" to reference files in wwwroot -->
}
