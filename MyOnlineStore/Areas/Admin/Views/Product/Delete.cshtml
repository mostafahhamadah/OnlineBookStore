@model Product
<div class="card shadow border-0 my-4">
    <div class="card card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2 "> Delete Product</h2>
            </div>
        </div>
        <div class="card-body p-4">
            <form method="post">
                <input asp-for="Id" hidden />
                <div class="border p-3 mt-4">
                    <div class="row pb-2">
                        <h2 class="text-primary"> Delete Product</h2>
                        <hr />
                    </div>
                    <div asp-validation-summary="All"></div>
                    <div class="mb-3 row">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" disabled class="form-control" />
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="Description"></label>
                    <textarea asp-for="Description" disabled class="form-control"></textArea>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="ISBN"></label>
                        <input asp-for="ISBN" disabled class="form-control" />

                    </div>
                    <div class="mb-3 row">
                        <label asp-for="author"></label>
                        <input asp-for="author" disabled class="form-control" />

                    </div>
                    <div class="mb-3 row">
                        <label asp-for="ListPrice"></label>
                        <input asp-for="ListPrice"  disabled class="form-control" />

                    </div>
                    <div class="mb-3 row">
                        <label asp-for="Price"></label>
                        <input asp-for="Price"  disabled class="form-control" />

                    </div>
                    <div class="mb-3 row">
                        <label asp-for="Price50"></label>
                        <input asp-for="Price50" disabled class="form-control" />

                    </div>
                    <div class="mb-3 row">
                        <label asp-for="Price100"></label>
                        <input asp-for="Price100" disabled class="form-control" />

                    </div>
                    <div class="row">
                        <div class="col-6 col-md-3"><button type="submit" class="btn btn-danger form-control">Delete</button></div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Product" asp-action="index" class="btn btn-outline-secondary form-control"> Back To List </a>

                        </div>
                    </div>

                </div>
            </form>
        </div>


@section Scripts{


    @{
        <partial name="_ValidationScriptsPartial" />
    }
}